<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/seek_con"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/seek_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        >
        <ImageView
            android:id="@+id/seek_navigation"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/common_btn_menu"
            android:layout_alignParentLeft="true"
            />
        <EditText
            android:id="@+id/seek_search_edit"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@id/seek_navigation"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_33"
            android:paddingLeft="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            android:hint="请输入您要搜索的内容"
            android:visibility="invisible"
            android:background="@drawable/sercrh_edit"
            />
        <ImageView
            android:id="@+id/seek_search_image"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/search"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/seek_search"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/search"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/seek_rela_classify"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela"
        android:clipChildren="false" >
        <ImageView
            android:id="@+id/seek_classify_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            />
        <TextView
            android:id="@+id/seek_classify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#ff5f57"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/seek_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintBottom_toTopOf="@id/xrecy_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela_classify"
        app:layout_constraintVertical_bias="1.0" />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/seek_search_xrecy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_24"
        app:layout_constraintBottom_toTopOf="@id/xrecy_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_rela_classify"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="gone"
        />
    <View
        android:id="@+id/xrecy_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffffff"
        />
</android.support.constraint.ConstraintLayout>